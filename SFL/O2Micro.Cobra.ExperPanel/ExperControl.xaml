                               MouseMove="Label_MouseMove" MouseLeave="Label_MouseLeave" 
                               Foreground="{Binding Path=bValueChange, Converter={StaticResource Bool2BrushConverter},Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                            <Label.Width>
                                <MultiBinding Converter="{StaticResource Multi08Bits2Width}">
                                    <Binding Path="ebcBit1.yDescripVisiLgth" />
                                    <Binding ElementName="grdRegBitOperate08" Path="ActualWidth" />
                                </MultiBinding>
                            </Label.Width>
                        </Label>
                        <Label Style="{DynamicResource label-exper}" Content="{Binding Path=ebcBit0.strPhysicalValue}" 
                               IsEnabled="{Binding Path=ebcBit0.bBitEnable, Mode=TwoWay}" 
                               MouseMove="Label_MouseMove" MouseLeave="Label_MouseLeave" 
                               Foreground="{Binding Path=bValueChange, Converter={StaticResource Bool2BrushConverter},Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                            <Label.Width>
                                <MultiBinding Converter="{StaticResource Multi08Bits2Width}">
                                    <Binding Path="ebcBit0.yDescripVisiLgth" />
                                    <Binding ElementName="grdRegBitOperate08" Path="ActualWidth" />
                                </MultiBinding>
                            </Label.Width>
                        </Label>
                    </StackPanel>   <!--physical value display -->
                </Grid> <!--Content Col_2: all bits operation-->
            </Grid>
        </DataTemplate> <!--Template for 8-bits Register, including Col_0=Reg_Ind/Reg_Val/WriRead and Col_1=blank and Col_2=8 or 16 bit_operation-->
    </UserControl.Resources>

    <Grid x:Name="grdExperParent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" MinWidth="120" MaxWidth="200"/>
            <ColumnDefinition Width="0.8*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="grdLeftPanel" Grid.Row="0" Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0">
                <Grid x:Name="grdRWButtonPanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <Button x:Name="btnReadAll" FontFamily="Arial" Content="Read All" Grid.Row="0" Margin="5,5,5,5"
                            Click="btnReadAll_Click" />
                    <Button x:Name="btnWriteAll" FontFamily="Arial" Content="Write All" Grid.Row="1" Margin="5,5,5,5"
                            Click="btnWriteAll_Click" />
                    <Grid Grid.Row="2" Margin="5,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*" />
                            <ColumnDefinition Width="0.4*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnGoto" FontFamily="Arial" Grid.Column="0" Content="Go Reg" Click="btnGoto_Click"/>
                        <TextBox x:Name="txtGoto" FontFamily="Arial" Grid.Column="1" Margin="2,2,5,2" MaxLength="2"
                                 BorderThickness="2" BorderBrush="Black" KeyDown="txtGoto_KeyDown" 
                                 InputMethod.PreferredImeState="Off"/>
                    </Grid>
<!--                            IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=bBtnExper, Mode=OneWay}" /> -->
                    <Button Name="btnExperPro" FontFamily="Arial" Content="Pro" Grid.Row="3" Margin="5,5,5,5"
                            Visibility="Visible" Click="btnExperPro_Click"  />
<!--                            IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=bBtnExper, Mode=OneWay}"/>-->
                </Grid>
            </Border>
            <Border Grid.Row="1" >
                <ListBox x:Name="dtgTestMode" 
                         FontFamily="Arial" BorderBrush="White" BorderThickness="0" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                         HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" 
                         Background="{StaticResource ExperBkgrndColor}" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Name="btnTest" IsEnabled="{Binding Path=bTestBtnEnable, Mode= OneWay}" Margin="5,10,5,5" 
                                    Tag="{Binding Path=ySubValue, Mode= OneWay}" Visibility="Visible"
                                    Click="btnTest_Click">
                                <TextBlock TextWrapping="Wrap" Text="{Binding Path=strTestTrim,  Mode=TwoWay}" />
                            </Button>
<!--                            
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=bTestBtnVisible, Mode=OneTime}" Value="false" >
                                    <DataTrigger.Setters>
                                        <Setter Property="Visibility" Value="Collapsed" TargetName="btnTest" />
                                    </DataTrigger.Setters>
                                </DataTrigger>
<!-                                
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=bBtnExper, Mode=OneWay}" Value="false" >
                                    <DataTrigger.Setters>
                                        <Setter Property="IsEnabled" Value="false" TargetName="btnTest" />
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </DataTemplate.Triggers>
-->
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="MinHeight" Value="50" />
                            <Setter Property="Focusable" Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=bTestBtnVisible, Mode=OneTime}" Value="false">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Grid>     <!-- Left Panel -->
        <Border Grid.Row="0" Grid.Column="1" >
            <ListBox x:Name="dtgRegistersPresent" Margin="5,5,5,5" 
                     FontFamily="Arial" BorderBrush="White" BorderThickness="0" 
                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" 
                     ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" 
                     ScrollViewer.IsDeferredScrollingEnabled="True"
                     Background="{StaticResource ExperBkgrndColor}"
                     ItemTemplateSelector="{DynamicResource DataComponentSelector}"  
                     VirtualizingStackPanel.IsVirtualizing="True"
                     >
<!--                     IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=bBtnExper, Mode=OneWay}" > -->
<!--                             ItemTemplate="{DynamicResource DtTmpltReg16Bits}" > -->
<!--                             Background="{Binding ElementName=grdRighPanel, Path=Background}" > -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=bXprRegShow}" Value="false">
                                <DataTrigger.Setters>
                                    <Setter Property="Visibility" Value="Collapsed"  />
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True" BorderBrush="#FFA4B97F" Background="#FFCACBCC" BorderThickness="0,0,0,1">
                                                <Expander.Header>
                                                    <DockPanel>
                                                        <TextBlock FontWeight="Bold" FontFamily="Arial" FontSize="16" Text="{Binding Path=Name}" Margin="5,0,0,0"/>
                                                    </DockPanel>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <ItemsPresenter />
                                                </Expander.Content>
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListBox.GroupStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Border>   <!--Right Panel -->
        <Popup x:Name="popTip" Placement="Top" PlacementTarget="{Binding}" IsOpen="False" >
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0" Background="LemonChiffon" >
                <TextBlock x:Name="popText" Foreground="Black" Margin="2,0,2,0">This is tip.</TextBlock>
            </Border>
        </Popup>
        <controls:WaitControl x:Name="ExperWaitControl" Margin="0,0,0,0" Grid.ColumnSpan="2" />
        <controls:WarningControl x:Name="ExperWarnMsg" Margin="0,0,0,0" Grid.ColumnSpan="2" />
    </Grid>
    
</UserControl>

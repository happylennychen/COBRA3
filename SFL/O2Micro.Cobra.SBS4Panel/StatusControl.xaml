<UserControl x:Class="O2Micro.Cobra.SBS4Panel.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:parent="clr-namespace:O2Micro.Cobra.SBS4Panel"
             mc:Ignorable="d" >

    <ScrollViewer Name="scroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Name="checkGrid" Grid.Row="0" VerticalAlignment="Top"/>
            <UniformGrid Name="cbGrid" Grid.Row="1" Columns="2" VerticalAlignment="Top" Margin="20,2,2,2"/>
            <UniformGrid Name="flagGrid" Grid.Row="2" Columns="3" VerticalAlignment="Top"/>
        </Grid>
    </ScrollViewer>
</UserControl>

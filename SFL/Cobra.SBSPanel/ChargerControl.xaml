<UserControl x:Class="Cobra.SBSPanel.ChargerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:parent="clr-namespace:Cobra.SBSPanel"
             mc:Ignorable="d" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
         
        <parent:ChargerStatusControl Grid.Row="0" x:Name="chargerstatus" Margin="1,1,1,5"/>
        <parent:ThermalControl   Grid.Row="1" x:Name="thermal" />
    </Grid>
</UserControl>
